<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yellowsoft.dry">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/dry_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:screenOrientation="portrait" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"  android:screenOrientation="portrait"></activity>
        <activity android:name=".BookAppointmentActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ContactActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".LanguageActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ServiceDetail" android:screenOrientation="portrait"></activity>
        <activity android:name=".ServicesActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".AboutActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".LoginActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".SignInActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".EditProfile" android:screenOrientation="portrait"></activity>
        <activity android:name=".AppointmentsActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".EditAppointment" android:screenOrientation="portrait"></activity>
        <activity android:name=".ForgetPasswordActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ServicePopupActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".OurServicesActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".OffersActivity" android:screenOrientation="portrait"></activity>

    </application>

</manifest>